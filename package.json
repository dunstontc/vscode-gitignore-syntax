{
    "name": "vscode-gitignore-syntax",
    "displayName": "vscode-gitignore-syntax",
    "description": "Syntax highlighting for .gitignore files.",
    "version": "0.1.2",
    "publisher": "dunstontc",
    "license": "MIT",
    "repository": {
      "type": "git",
      "url": "https://github.com/dunstontc/vscode-gitignore-syntax.git"
    },
    "engines": {
        "vscode": "^1.20.0"
    },
    "categories": [
        "Programming Languages"
    ],
	"keywords": [
		"exclude"
	],
    "galleryBanner": {
      "color": "#569cd6",
      "theme": "dark"
    },
    "icon": "assets/gitignore.png",
    "contributes": {
        "languages": [
            {
                "id": "gitignore",
                "aliases": [
                    "gitignore",
                    "Gitignore"
                ],
                "extensions": [
                    "gitignore",
                    ".gitignore"
                ],
				"filenamePatterns": [
					"**/.git/info/exclude"
				],
				"firstLine": "^# git ls-files --others --exclude-from=\\.git/info/exclude$",
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "gitignore",
                "scopeName": "source.gitignore",
                "path": "./syntaxes/gitignore.tmLanguage.json"
            }
        ]
    }
}
